DROP SCHEMA IF EXISTS 'bdracing';

CREATE SCHEMA IF NOT EXISTS 'bdracing' DEFAULT CHARACTER SET utf8;

CREATE TABLE 'tbcarro'
(
  'id' INT NOT NULL AUTO_INCREMENT,
  'nome_piloto' VARCHAR(30) NOT NULL,
  'nome_equipe' VARCHAR(15) NOT NULL,
  'modelo' VARCHAR(15) NOT NULL,
  'potencia' VARCHAR NOT NULL,
);

CREATE TABLE 'tbcorrida'
(
  'id serial' NOT NULL,
  'id_pista_fk' INT,
  'id_carro1_fk' INT,
  'id_carro2_fk' INT,
  'nome_corrida' VARCHAR,
);

CREATE TABLE 'tbpista'
(
  'id' INT NOT NULL AUTO_INCREMENT,
  'nome_pista' VARCHAR,
);

CREATE TABLE 'tbtrecho'
(
  'id' INT NOT NULL AUTO_INCREMENT,
  'nome_trecho' VARCHAR,
  'acelera_reduz' VARCHAR,
);

CREATE TABLE 'tbtrechopista'
(
  'id_pista' INT NOT NULL,
  'id_trecho' INT NOT NULL
);
